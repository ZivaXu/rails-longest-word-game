<div class="container">
  <h1>New game</h1>
  <div class="card-grid">
    <% @grid.each do |letter| %>
      <span class="badge badge-pill badge-primary">
        <%= letter %>
      </span>
    <% end %>
  </div>

  <p class="margin">What is the longest word you can find?</p>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <input type="text" name="answer" class ="form-control">
    <input type="submit" value="Play" class="btn btn-warning">
  </form>
</div>
